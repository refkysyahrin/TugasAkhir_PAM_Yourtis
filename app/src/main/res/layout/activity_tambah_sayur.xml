<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Sayur Baru"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etNamaSayur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Sayur (cth: Bayam)"
            android:inputType="textCapWords"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etHargaSayur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga per Kg (Rp)"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etStokSayur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stok Tersedia (Kg)"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etDeskripsiSayur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi Singkat"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Produk"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <FrameLayout
            android:id="@+id/btnUploadGaleri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@android:drawable/ic_menu_upload"
                android:scaleType="centerInside"
                android:background="#F5F5F5"
                android:contentDescription="Preview Foto Sayur" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap untuk pilih dari Galeri"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="24dp"
                android:textColor="#666666"
                android:textStyle="bold"/>
        </FrameLayout>

        <Button
            android:id="@+id/btnSimpanSayur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIMPAN PRODUK"
            android:textStyle="bold"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF"
            android:padding="14dp"/>

    </LinearLayout>
</ScrollView>